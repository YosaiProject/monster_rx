{% extends "monster_rx:templates/layout.jinja2" %}
{% import 'monster_rx:templates/forms.jinja2' as form %}

{% block content %}
<div class="row">
    <div class="col-lg-offset-4 col-lg-12">
        <img class="monster_rx_logo"
             src="{{request.static_url('monster_rx:static/img/monster_rx_logo.png')}}">
        </img>
    </div>
</div>
<div class="panel-body">

        <form action="{{ 'login'|route_url }}"
              method="POST" role="form" class="form-horizontal">
            {{form.render_form(login_form)}}
        <button type="submit" class="btn btn-default col-sm-offset-9 btn-primary">
            Login
        </button>
    </form>
</div>
{% endblock content %}
