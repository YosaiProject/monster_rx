{% extends "monster_rx:templates/layout.jinja2" %}
{% import 'monster_rx:templates/forms.jinja2' as form %}

{% block content %}
<div class="col-md-5">

    <div class="panel panel-default">
        <div class="panel-heading">
            <h3 class="panel-title">
                Write a New Prescription
            </h3>
        </div>
        <div class="panel-body">

            <form action="{{request.route_url('write_rx', medicine_id=write_rx_form.medicine.id)}}"
                  method="POST" role="form" class="form-horizontal">
                {{form.render_form(write_rx_form)}}
            <button type="submit" class="btn btn-default col-sm-offset-3 btn-primary">
                Create Rx
            </button>
        </form>

        </div>
    </div>
</div>


{% endblock content %}
